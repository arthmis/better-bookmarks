{
  "manifest_version": 3,
  "name": "Better Bookmarks",
  "version": "1.2.0",
  "description": "A bookmark manager to organize and manage your bookmarks. Easily create and delete bookmarks.",

  "action": {
    "default_icon": "./assets/bookmark-icon.svg",
    "default_popup": "/index.html",
    "default_title": "Better Bookmarks"
  },

  "permissions": ["activeTab", "storage", "tabs", "bookmarks"],
  "browser_specific_settings": {
    "gecko": {
      "id": "artmisdev@betterbookmarks.com"
    }
  }
}
