{
  "manifest_version": 3,
  "name": "Better Bookmarks",
  "version": "1.3.0",
  "description": "A bookmark manager to organize and manage your bookmarks. Easily create and delete bookmarks.",

  "action": {
    "default_icon": "./assets/bookmark-icon.svg",
    "default_popup": "/index.html",
    "default_title": "Better Bookmarks"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; worker-src 'self'; upgrade-insecure-requests;"
  },

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.wasm"],
      "matches": ["<all_urls>"]
    }
  ],

  "permissions": ["activeTab", "storage", "tabs", "bookmarks", "downloads"],
  "browser_specific_settings": {
    "gecko": {
      "id": "artmisdev@betterbookmarks.com",
      "data_collection_permissions": {
        "required": [],
        "optional": []
      }
    }
  }
}
